<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DepartmentLogin"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#8FB1908C">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="#121212"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Department"/>
        <Spinner
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="#121212"
            android:id="@+id/deptDepartmentLogin"
            android:layout_height="wrap_content"
            android:entries="@array/departmentlist"/>

    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textColor="#121212"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="Department Id"/>
    <EditText
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textColor="#121212"
        android:id="@+id/userIdDepartmentLogin"
        android:layout_height="wrap_content" />

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="#121212"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Password"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="#121212"
            android:id="@+id/passwordDepartmentLogin"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:textColor="#121212"
        android:text="Login"
        android:id="@+id/loginDepartmentLogin"
        android:layout_height="wrap_content" />


</LinearLayout>